@model TechJobs.ViewModels.NewJobViewModel

<div asp-validation-summary="All"></div>

<form asp-controller="Job" asp-action="New" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="EmployerID"></label>
        <select asp-for="EmployerID" asp-items="Model.Employers"></select>
    </div>
    <div class="form-group">
        <label asp-for="JobLocation"></label>
        <select asp-for="JobLocation" asp-items="Model.Locations"></select>
    </div>
    <div class="form-group">
        <label asp-for="JobCoreCompetency"></label>
        <select asp-for="JobCoreCompetency" asp-items="Model.CoreCompetencies"></select>
    </div>
    <div class="form-group">
        <label asp-for="JobPositionType"></label>
        <select asp-for="JobPositionType" asp-items="Model.PositionTypes"></select>
    </div>

    


    @{ 
        // TODO #5 - Create <select> dropdowns for other job fields (outside of this @{ } block)
    }

    <input type="submit" value="Add Job" />
</form>